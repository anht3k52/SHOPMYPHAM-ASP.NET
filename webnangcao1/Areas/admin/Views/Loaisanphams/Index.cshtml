@model IEnumerable<webnangcao1.Models.Loaisanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminLayout1.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Quản lý Loại sản phẩm</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Loại sản phẩm</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Tenloaisanpham)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenloaisanpham)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Maloaisanpham }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Maloaisanpham }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Maloaisanpham })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>


