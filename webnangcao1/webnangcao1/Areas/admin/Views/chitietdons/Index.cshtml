@model IEnumerable<webnangcao1.Models.chitietdon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminLayout1.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
