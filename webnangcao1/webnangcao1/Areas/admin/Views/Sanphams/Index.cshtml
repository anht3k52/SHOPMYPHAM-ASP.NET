@model IEnumerable<webnangcao1.Models.Sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminLayout1.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Quản lý sản phẩm</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Sản phẩm</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Tensanpham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Thongtin) 
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ngay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hinhchinh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hinh1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hinh2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hinh3)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hinh4)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tinhtrang)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.thuoctinh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Loaisanpham.Tenloaisanpham)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tensanpham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Thongtin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngay)
                            </td>
                            <td>
                                <img src="@item.Hinhchinh" alt="" width="100">
                            </td>
                            <td>
                                <img src="@item.Hinh1" alt="" width="100">
                            </td>
                            <td>
                                <img src="@item.Hinh2" alt="" width="100">
                            </td>
                            <td>
                                <img src="@item.Hinh3" alt="" width="100">
                            </td>
                            <td>
                                <img src="@item.Hinh4" alt="" width="100">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tinhtrang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.thuoctinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Loaisanpham.Tenloaisanpham)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Masanpham }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Masanpham }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Masanpham })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>
